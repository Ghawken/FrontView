    <Application x:Class="FrontView.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Yatse2="clr-namespace:FrontView"
    xmlns:Classes="clr-namespace:FrontView.Classes" 
    StartupUri="Yatse2Window.xaml"
    Exit="Application_Exit">             
    <Application.Resources>
        <ResourceDictionary>
            <Yatse2:MoviesCollection x:Key="MoviesDataSource" />
            <Yatse2:TvShowsCollection x:Key="TvShowsDataSource" />
            <Yatse2:TvSeasonsCollection x:Key="TvSeasonsDataSource" />
            <Yatse2:TvEpisodesCollection x:Key="TvEpisodesDataSource" />
            <Yatse2:AudioAlbumsCollection x:Key="AudioAlbumsDataSource" />
            <Yatse2:AudioArtistsCollection x:Key="AudioArtistsDataSource" />
            <Yatse2:AudioGenresCollection x:Key="AudioGenresDataSource" />
            <Yatse2:AudioSongsCollection x:Key="AudioSongsDataSource" />
			<Classes:Yatse2Properties x:Key="Yatse2Properties" />
			
            <ResourceDictionary.MergedDictionaries>
    			<ResourceDictionary Source="Skin/Internal/English.xaml"/>
                <ResourceDictionary Source="Skin/Internal/Skin.xaml"/>
    		</ResourceDictionary.MergedDictionaries>
    	</ResourceDictionary>
    </Application.Resources>
</Application>
